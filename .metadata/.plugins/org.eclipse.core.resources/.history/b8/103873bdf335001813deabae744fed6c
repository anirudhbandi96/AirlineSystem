				 Reservation r = new Reservation(rs.getInt(1), rs.getDate(2), rs.getInt(3), rs.getInt(4), rs.getInt(5), rs.getInt(6));
				 reservationData.add(r);
			}
			}catch (SQLException e) {
			e.printStackTrace();
